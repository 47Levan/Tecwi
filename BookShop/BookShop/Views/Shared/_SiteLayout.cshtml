@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/BasicScripts")
    @Styles.Render("~/bundles/BasicStyles")
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyCns923aznvKl5x0hYmv21r-PJL_wKE6lw"
            type="text/javascript"></script>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top">
    <div>
        <img src="~/Images/Header-Logo.png"/>
    </div>
    <hr style="border-top: 1px solid #a59b9b; margin-bottom: 0px"/>
    <ul class="nav navbar-nav">
        <li>
            <a id="HomeHref" href="#">
                Home
            </a>
        </li>
        <li>
            <a id="AboutHref" href="#">
                About
            </a>
        </li>
        <li>
            <a id="ContactsHref" href="#">
                Contacts
            </a>
        </li>
        <li>
            <input id="SearchBook" placeholder="Search..." type="text" class="form-control"/>
        </li>
    </ul>
</nav>

<div class="full-screen-container">
    @RenderBody()
</div>
<footer>
    <ul class="nav navbar-nav">
        <li>
            <a id="HomeHrefFooter" href="#">
                Home
            </a>
        </li>
        <li>
            <a id="AboutHrefFooter" href="#">
                About
            </a>
        </li>
        <li>
            <a id="ContactsHrefFooter" href="#">
                Contacts
            </a>
        </li>
    </ul>
</footer>

</body>
</html>
